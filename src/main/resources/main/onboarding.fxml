<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.Hyperlink?>
<AnchorPane stylesheets="@onboarding.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.MainController">
   <StackPane layoutX="5.0" layoutY="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <VBox alignment="CENTER" style="-fx-background-color: #e4e4e4; -fx-border-color: #0000; -fx-spacing: 25.0">
         <StackPane>
            <!-- Welcome Message -->
            <VBox id="OnboardingVBox">
               <Label id="WelcomeText" text="Welcome to Paged!" />
               <Label id="GreetingsLabel" layoutY="30.0" text="Good to see you! Can't wait to chat with you!" />
            </VBox>
         </StackPane>
         <VBox fx:id="LoginForm">
            <Label text="Phone Number or email" />
            <TextField promptText="Phone number or email"/>
            <Label text="Password" />
            <TextField promptText="Password"/>
            <VBox alignment="CENTER" style="-fx-spacing: 10.0">
               <TextFlow>
                  <Label text="Don't have an account? " />
                  <Hyperlink onAction="#handleShowSignup" text="Create one!" />
               </TextFlow>
               <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#handleOnboardingClick" text="Log In" />
            </VBox>
         </VBox>
         <VBox fx:id="SignupForm" visible="false" managed="false">
            <Label text="Create Your Account"/>
            <TextField promptText="Your Name"/> 
            <TextField promptText="Phone number or email"/>
            <TextField promptText="Password"/>

            <VBox alignment="CENTER" style="-fx-spacing: 10.0">
               <TextFlow>
                  <Label text="Have an account? " />
                  <Hyperlink onAction="#handleShowLogin" text="Login now!" />
               </TextFlow>
               <Button contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#handleOnboardingClick" text="Sign Up" />
            </VBox>
         </VBox>
      </VBox>
   </StackPane>
</AnchorPane>
